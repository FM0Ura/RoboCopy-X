<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="RoboCopy_X.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RoboCopy_X"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="RoboCopy-X">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <!-- Main Navigation -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with subtle elevation -->
        <Border Grid.Row="0"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title Area -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="RoboCopy-X" 
                               FontSize="24" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Interface Gráfica Moderna para Robocopy" 
                               FontSize="12" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="12"
                           VerticalAlignment="Center">
                    
                    <!-- Admin Mode Toggle Button with enhanced styling -->
                    <ToggleButton x:Name="AdminModeToggle"
                                  Click="AdminModeToggle_Click"
                                  Padding="12,8"
                                  CornerRadius="6"
                                  BorderThickness="2">
                        <ToggleButton.Resources>
                            <!-- Custom colors for checked state (Admin Active) -->
                            <SolidColorBrush x:Key="ToggleButtonBackgroundChecked" Color="#FFF3CD"/>
                            <SolidColorBrush x:Key="ToggleButtonBackgroundCheckedPointerOver" Color="#FFE69C"/>
                            <SolidColorBrush x:Key="ToggleButtonBackgroundCheckedPressed" Color="#FFD966"/>
                            <SolidColorBrush x:Key="ToggleButtonBorderBrushChecked" Color="#FF9800"/>
                            <SolidColorBrush x:Key="ToggleButtonBorderBrushCheckedPointerOver" Color="#F57C00"/>
                            <SolidColorBrush x:Key="ToggleButtonBorderBrushCheckedPressed" Color="#E65100"/>
                        </ToggleButton.Resources>
                        <Grid>
                            <!-- Content when Admin Mode is OFF -->
                            <StackPanel Orientation="Horizontal" Spacing="8" x:Name="AdminModeOffContent">
                                <FontIcon Glyph="&#xE7EF;" 
                                         FontSize="16" 
                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="Modo Admin" 
                                          FontSize="13"
                                          VerticalAlignment="Center"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            <!-- Content when Admin Mode is ON -->
                            <StackPanel Orientation="Horizontal" Spacing="8" x:Name="AdminModeOnContent" Visibility="Collapsed">
                                <FontIcon Glyph="&#xE72E;" 
                                         FontSize="16" 
                                         Foreground="#E65100">
                                    <FontIcon.RenderTransform>
                                        <CompositeTransform/>
                                    </FontIcon.RenderTransform>
                                </FontIcon>
                                <TextBlock Text="Admin Ativo" 
                                          FontSize="13"
                                          FontWeight="SemiBold" 
                                          VerticalAlignment="Center"
                                          Foreground="#E65100"/>
                            </StackPanel>
                        </Grid>
                        <ToolTipService.ToolTip>
                            <ToolTip>
                                <StackPanel Spacing="4" MaxWidth="300">
                                    <TextBlock Text="Modo Administrador" FontWeight="SemiBold"/>
                                    <TextBlock Text="Ativa privilégios elevados para operações que exigem permissões de administrador." 
                                              TextWrapping="Wrap"
                                              FontSize="12"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </ToggleButton>
                    
                    <!-- Separator -->
                    <Rectangle Width="1" 
                              Height="28"
                              Fill="{ThemeResource DividerStrokeColorDefaultBrush}"
                              Margin="4,0"/>
                    
                    <Button x:Name="SettingsButton"
                            Click="SettingsButton_Click"
                            Style="{StaticResource SubtleButtonStyle}"
                            ToolTipService.ToolTip="Configurações da aplicação">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE713;" FontSize="16"/>
                            <TextBlock Text="Configurações"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content with proper spacing -->
        <ScrollViewer Grid.Row="1" Padding="24,16,24,24" HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid HorizontalAlignment="Center" MinWidth="800">
                <StackPanel Spacing="24" MaxWidth="1200" HorizontalAlignment="Stretch">
                
                <!-- InfoBar for messages with improved visibility -->
                <InfoBar x:Name="InfoBarMessage" 
                         IsOpen="False" 
                         IsClosable="True"/>

                <!-- Execute Operation Section - NOW AT TOP -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE768;" FontSize="20" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Executar Operação" 
                                      FontWeight="SemiBold"
                                      FontSize="18"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" 
                                   Spacing="12" 
                                   HorizontalAlignment="Center">
                            <Button x:Name="ExecuteButton" 
                                    Style="{StaticResource AccentButtonStyle}"
                                    Click="ExecuteButton_Click"
                                    MinWidth="180"
                                    Height="48"
                                    CornerRadius="8">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <FontIcon Glyph="&#xE768;" FontSize="20"/>
                                    <TextBlock Text="Executar" FontSize="16" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="CancelButton" 
                                    Click="CancelButton_Click"
                                    IsEnabled="False"
                                    MinWidth="180"
                                    Height="48"
                                    CornerRadius="8">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <FontIcon Glyph="&#xE711;" FontSize="20"/>
                                    <TextBlock Text="Cancelar" FontSize="16" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Informational Message -->
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,8"
                                Margin="0,12,0,0"
                                HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE946;" 
                                         FontSize="16"
                                         Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Configure seu modo de transferência abaixo"
                                          FontSize="13"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Progress Section with Percentage -->
                        <StackPanel x:Name="ProgressSection" 
                                   Spacing="8"
                                   Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ProgressBar x:Name="ProgressBar" 
                                            Grid.Column="0"
                                            IsIndeterminate="False" 
                                            Value="0"
                                            Maximum="100"
                                            Height="10"
                                            CornerRadius="5"
                                            VerticalAlignment="Center"/>
                                
                                <TextBlock x:Name="ProgressPercentageText"
                                          Grid.Column="1"
                                          Text="0%"
                                          FontSize="16"
                                          FontWeight="Bold"
                                          Margin="16,0,0,0"
                                          VerticalAlignment="Center"
                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            </Grid>
                            
                            <TextBlock x:Name="ProgressStatusText"
                                      Text="Preparando..."
                                      FontSize="13"
                                      FontWeight="SemiBold"
                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                      TextAlignment="Center"
                                      TextTrimming="CharacterEllipsis"
                                      MaxLines="2"/>
                            

                            <TextBlock x:Name="ProgressDetailsText"
                                      Text=""
                                      FontSize="11"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      TextAlignment="Center"
                                      Visibility="Collapsed"/>
                        </StackPanel>

                        <!-- Hash Validation Results Card -->
                        <Border x:Name="HashValidationCard"
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="16"
                                Margin="0,16,0,0"
                                Visibility="Collapsed">
                            <StackPanel Spacing="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                        <FontIcon x:Name="HashValidationIcon"
                                                 Glyph="&#xE72E;" 
                                                 FontSize="16"
                                                 Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="Validação de Hash"
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            x:Name="ViewHashLogsButton"
                                            Click="ViewHashLogsButton_Click"
                                            Style="{StaticResource SubtleButtonStyle}"
                                            ToolTipService.ToolTip="Ver logs detalhados">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon Glyph="&#xE7C3;" FontSize="14"/>
                                            <TextBlock Text="Ver Logs" FontSize="12"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Source Hash -->
                                    <StackPanel Grid.Row="0" Spacing="4" Margin="0,0,0,8">
                                        <TextBlock Text="Hash Origem:"
                                                  FontSize="11"
                                                  FontWeight="SemiBold"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                               BorderThickness="1"
                                               CornerRadius="4"
                                               Padding="8,6">
                                            <TextBlock x:Name="SourceHashText"
                                                      Text="-"
                                                      FontFamily="Consolas"
                                                      FontSize="11"
                                                      TextWrapping="Wrap"
                                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Destination Hash -->
                                    <StackPanel Grid.Row="1" Spacing="4" Margin="0,0,0,8">
                                        <TextBlock Text="Hash Destino:"
                                                  FontSize="11"
                                                  FontWeight="SemiBold"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                               BorderThickness="1"
                                               CornerRadius="4"
                                               Padding="8,6">
                                            <TextBlock x:Name="DestinationHashText"
                                                      Text="-"
                                                      FontFamily="Consolas"
                                                      FontSize="11"
                                                      TextWrapping="Wrap"
                                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Validation Result -->
                                    <Border Grid.Row="2"
                                           x:Name="HashValidationResultBorder"
                                           Background="{ThemeResource AccentFillColorDefaultBrush}"
                                           BorderThickness="0"
                                           CornerRadius="4"
                                           Padding="12,8">
                                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                            <FontIcon x:Name="HashValidationResultIcon"
                                                     Glyph="&#xE73E;"
                                                     FontSize="14"
                                                     Foreground="White"/>
                                            <TextBlock x:Name="HashValidationResultText"
                                                      Text="Hashes são idênticos - Arquivo íntegro"
                                                      FontSize="12"
                                                      FontWeight="SemiBold"
                                                      Foreground="White"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Disk Space Information Card - IMPROVED STYLING -->
                <Border x:Name="DiskSpaceInfoCard"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Grid.Column="0"
                                Width="48"
                                Height="48"
                                CornerRadius="24"
                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                Margin="0,0,16,0">
                            <FontIcon Glyph="&#xEDA2;" 
                                     FontSize="24"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>

                        <!-- Information -->
                        <StackPanel Grid.Column="1" 
                                   Spacing="8"
                                   VerticalAlignment="Center">
                            <TextBlock x:Name="DiskSpaceTitle"
                                      Text="✅ Espaço suficiente disponível"
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Required -->
                                <TextBlock Grid.Row="0" Grid.Column="0"
                                          Text="Necessário:"
                                          FontSize="13"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          Margin="0,0,12,4"/>
                                <TextBlock x:Name="DiskSpaceRequired"
                                          Grid.Row="0" Grid.Column="1"
                                          Text="0 GB"
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                          Margin="0,0,0,4"/>

                                <!-- Available -->
                                <TextBlock Grid.Row="1" Grid.Column="0"
                                          Text="Disponível:"
                                          FontSize="13"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          Margin="0,0,12,4"/>
                                <TextBlock x:Name="DiskSpaceAvailable"
                                          Grid.Row="1" Grid.Column="1"
                                          Text="0 GB"
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                          Margin="0,0,0,4"/>

                                <!-- Safety Margin -->
                                <TextBlock Grid.Row="2" Grid.Column="0"
                                          Text="Margem de segurança:"
                                          FontSize="13"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          Margin="0,0,12,4"/>
                                <TextBlock x:Name="DiskSpaceMargin"
                                          Grid.Row="2" Grid.Column="1"
                                          Text="0 MB"
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          Margin="0,0,0,4"/>

                                <!-- After Copy -->
                                <TextBlock Grid.Row="3" Grid.Column="0"
                                          Text="Após cópia:"
                                          FontSize="13"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          Margin="0,0,12,0"/>
                                <TextBlock x:Name="DiskSpaceAfter"
                                          Grid.Row="3" Grid.Column="1"
                                          Text="~0 GB livres"
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </Grid>
                        </StackPanel>

                        <!-- Close Button -->
                        <Button Grid.Column="2"
                                x:Name="DiskSpaceCloseButton"
                                Click="DiskSpaceCloseButton_Click"
                                Width="32"
                                Height="32"
                                Padding="0"
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalAlignment="Top"
                                ToolTipService.ToolTip="Fechar">
                            <FontIcon Glyph="&#xE711;" FontSize="12"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Paths Card with improved visual hierarchy -->
                <Expander Header="Caminhos de Origem e Destino"
                          IsExpanded="True"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Stretch">
                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE8B7;" FontSize="20"/>
                                <TextBlock Text="{Binding}" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Expander.HeaderTemplate>
                    
                    <StackPanel Spacing="16" Margin="0,16,0,0">
                        <!-- Transfer Mode Toggle -->
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <FontIcon Grid.Column="0"
                                         Glyph="&#xE946;" 
                                         FontSize="16"
                                         Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,12,0"/>

                                <StackPanel Grid.Column="1" 
                                           VerticalAlignment="Center"
                                           Spacing="2">
                                    <TextBlock Text="Modo de transferência"
                                              FontSize="13"
                                              FontWeight="SemiBold"/>
                                    <TextBlock x:Name="TransferModeDescription"
                                              Text="Selecione se deseja transferir pastas ou arquivos individuais"
                                              FontSize="11"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2"
                                           Orientation="Horizontal"
                                           Spacing="8"
                                           VerticalAlignment="Center">
                                    <RadioButton x:Name="FolderModeRadioButton"
                                                Content="Pasta"
                                                IsChecked="True"
                                                GroupName="TransferMode"
                                                Checked="TransferModeRadioButton_Checked">
                                        <RadioButton.Template>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Grid>
                                                    <Border x:Name="ButtonBorder"
                                                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                           BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                           BorderThickness="1"
                                                           CornerRadius="4"
                                                           Padding="12,6"
                                                           MinWidth="80">
                                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                                            <FontIcon x:Name="FolderIcon"
                                                                     Glyph="&#xE8B7;" 
                                                                     FontSize="14"
                                                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                            <TextBlock x:Name="ButtonText"
                                                                      Text="{TemplateBinding Content}"
                                                                      FontSize="12"
                                                                      VerticalAlignment="Center"
                                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CheckStates">
                                                            <VisualState x:Name="Checked">
                                                                <VisualState.Setters>
                                                                    <Setter Target="ButtonBorder.Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
                                                                    <Setter Target="ButtonBorder.BorderBrush" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
                                                                    <Setter Target="FolderIcon.Foreground" Value="White"/>
                                                                    <Setter Target="ButtonText.Foreground" Value="White"/>
                                                                    <Setter Target="ButtonText.FontWeight" Value="SemiBold"/>
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                            <VisualState x:Name="Unchecked"/>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                </Grid>
                                            </ControlTemplate>
                                        </RadioButton.Template>
                                        <ToolTipService.ToolTip>
                                            <ToolTip>
                                                <TextBlock Text="Transferir pasta completa (recomendado)" MaxWidth="200" TextWrapping="Wrap"/>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </RadioButton>

                                    <RadioButton x:Name="FileModeRadioButton"
                                                Content="Arquivo"
                                                GroupName="TransferMode"
                                                Checked="TransferModeRadioButton_Checked">
                                        <RadioButton.Template>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Grid>
                                                    <Border x:Name="ButtonBorder"
                                                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                           BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                           BorderThickness="1"
                                                           CornerRadius="4"
                                                           Padding="12,6"
                                                           MinWidth="80">
                                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                                            <FontIcon x:Name="FileIcon"
                                                                     Glyph="&#xE8A5;" 
                                                                     FontSize="14"
                                                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                            <TextBlock x:Name="ButtonText"
                                                                      Text="{TemplateBinding Content}"
                                                                      FontSize="12"
                                                                      VerticalAlignment="Center"
                                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CheckStates">
                                                            <VisualState x:Name="Checked">
                                                                <VisualState.Setters>
                                                                    <Setter Target="ButtonBorder.Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
                                                                    <Setter Target="ButtonBorder.BorderBrush" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
                                                                    <Setter Target="FileIcon.Foreground" Value="White"/>
                                                                    <Setter Target="ButtonText.Foreground" Value="White"/>
                                                                    <Setter Target="ButtonText.FontWeight" Value="SemiBold"/>
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                            <VisualState x:Name="Unchecked"/>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                </Grid>
                                            </ControlTemplate>
                                        </RadioButton.Template>
                                        <ToolTipService.ToolTip>
                                            <ToolTip>
                                                <TextBlock Text="Transferir arquivos individuais" MaxWidth="200" TextWrapping="Wrap"/>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </RadioButton>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Source Path with improved design -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Pasta de Origem" 
                                       FontWeight="SemiBold"
                                       FontSize="14"/>
                            <Border x:Name="SourceDropBorder"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    AllowDrop="True"
                                    DragOver="SourceDropBorder_DragOver"
                                    Drop="SourceDropBorder_Drop"
                                    DragLeave="SourceDropBorder_DragLeave"
                                    Tapped="SourceDropBorder_Tapped"
                                    MinHeight="80"
                                    Padding="16">
                                <Grid>
                                    <StackPanel x:Name="SourcePlaceholder"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Spacing="8">
                                        <FontIcon Glyph="&#xE8B7;" 
                                                 FontSize="32" 
                                                 HorizontalAlignment="Center"
                                                 Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="Arraste uma pasta aqui"
                                                  FontWeight="SemiBold"
                                                  TextAlignment="Center"/>
                                        <TextBlock Text="ou clique para selecionar"
                                                  FontSize="12"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                  TextAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock x:Name="SourcePathText"
                                              Text=""
                                              VerticalAlignment="Center"
                                              TextWrapping="Wrap"
                                              FontFamily="Consolas"
                                              FontSize="13"
                                              Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Destination Path with improved design -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Pasta de Destino" 
                                       FontWeight="SemiBold"
                                       FontSize="14"/>
                            <Border x:Name="DestinationDropBorder"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    AllowDrop="True"
                                    DragOver="DestinationDropBorder_DragOver"
                                    Drop="DestinationDropBorder_Drop"
                                    DragLeave="DestinationDropBorder_DragLeave"
                                    Tapped="DestinationDropBorder_Tapped"
                                    MinHeight="80"
                                    Padding="16">
                                <Grid>
                                    <StackPanel x:Name="DestinationPlaceholder"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Spacing="8">
                                        <FontIcon Glyph="&#xE8B7;" 
                                                 FontSize="32" 
                                                 HorizontalAlignment="Center"
                                                 Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="Arraste uma pasta aqui"
                                                  FontWeight="SemiBold"
                                                  TextAlignment="Center"/>
                                        <TextBlock Text="ou clique para selecionar"
                                                  FontSize="12"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                  TextAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock x:Name="DestinationPathText"
                                              Text=""
                                              VerticalAlignment="Center"
                                              TextWrapping="Wrap"
                                              FontFamily="Consolas"
                                              FontSize="13"
                                              Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- Parameters in organized cards -->
                <Expander Header="Parâmetros de Cópia"
                          IsExpanded="True"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Stretch">
                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE713;" FontSize="20"/>
                                <TextBlock Text="{Binding}" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Expander.HeaderTemplate>

                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Spacing="20">
                            <!-- Copy Options Card -->
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Opções de Cópia" 
                                              FontWeight="SemiBold"
                                              FontSize="14"/>
                                    
                                    <CheckBox x:Name="CopySubdirectoriesCheckBox" 
                                              Content="Copiar subdiretórios incluindo vazios"
                                              ToolTipService.ToolTip="Copia todos os subdiretórios, incluindo vazios (/E)"/>

                                    <CheckBox x:Name="MirrorCheckBox" 
                                              Content="Espelhar árvore de diretórios"
                                              Checked="MirrorCheckBox_Checked">
                                        <CheckBox.Resources>
                                            <SolidColorBrush x:Key="CheckBoxForegroundUncheckedPointerOver" Color="#C42B1C"/>
                                        </CheckBox.Resources>
                                        <ToolTipService.ToolTip>
                                            <ToolTip>
                                                <StackPanel>
                                                    <TextBlock Text="Modo Espelho (/MIR)" FontWeight="SemiBold"/>
                                                    <TextBlock Text="⚠️ ATENÇÃO: Deleta arquivos no destino" 
                                                              TextWrapping="Wrap"
                                                              MaxWidth="200"
                                                              Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </CheckBox>

                                    <CheckBox x:Name="ExcludeOlderCheckBox" 
                                              Content="Excluir arquivos mais antigos"
                                              ToolTipService.ToolTip="Não sobrescreve arquivos mais novos no destino (/XO)"/>
                                </StackPanel>
                            </Border>

                            <!-- Attributes Card -->
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Atributos a Copiar" 
                                              FontWeight="SemiBold"
                                              FontSize="14"/>
                                    
                                    <CheckBox x:Name="CopyDataCheckBox" 
                                              Content="Dados" 
                                              IsChecked="True"
                                              ToolTipService.ToolTip="Copia os dados dos arquivos (D)"/>

                                    <CheckBox x:Name="CopyAttributesCheckBox" 
                                              Content="Atributos" 
                                              IsChecked="True"
                                              ToolTipService.ToolTip="Copia atributos como somente leitura, oculto, etc. (A)"/>

                                    <CheckBox x:Name="CopyTimestampsCheckBox" 
                                              Content="Carimbos de data/hora" 
                                              IsChecked="True"
                                              ToolTipService.ToolTip="Preserva timestamps dos arquivos (T)"/>

                                    <CheckBox x:Name="CopySecurityCheckBox" 
                                              Content="Segurança NTFS"
                                              ToolTipService.ToolTip="Copia informações de segurança NTFS/ACLs (S)"/>

                                    <CheckBox x:Name="CopyOwnerCheckBox" 
                                              Content="Informações de proprietário"
                                              ToolTipService.ToolTip="Copia informações de proprietário (O)"/>

                                    <CheckBox x:Name="CopyAuditCheckBox" 
                                              Content="Informações de auditoria"
                                              ToolTipService.ToolTip="Copia informações de auditoria (U)"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="2" Spacing="20">
                            <!-- Performance Card -->
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Desempenho" 
                                              FontWeight="SemiBold"
                                              FontSize="14"/>
                                    
                                    <CheckBox x:Name="MultiThreadCheckBox" 
                                              Content="Cópias multi-thread" 
                                              IsChecked="True"
                                              Checked="MultiThreadCheckBox_Checked"
                                              Unchecked="MultiThreadCheckBox_Unchecked"
                                              ToolTipService.ToolTip="Usa múltiplas threads para melhor desempenho (/MT)"/>
                                    
                                    <StackPanel Spacing="8" Margin="24,0,0,0">
                                        <TextBlock Text="Número de threads:" 
                                                  FontSize="12"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <ComboBox x:Name="ThreadCountComboBox" 
                                                  HorizontalAlignment="Stretch"
                                                  SelectionChanged="ThreadCountComboBox_SelectionChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            

                            <!-- Retry Options Card -->
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Tentativas" 
                                              FontWeight="SemiBold"
                                              FontSize="14"/>
                                    
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Número de tentativas:" 
                                                  FontSize="12"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <ComboBox x:Name="RetryCountComboBox" 
                                                  HorizontalAlignment="Stretch"
                                                  SelectionChanged="RetryCountComboBox_SelectionChanged"
                                                  ToolTipService.ToolTip="Tentativas em caso de falha (/R)"/>
                                    </StackPanel>

                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Espera entre tentativas:" 
                                                  FontSize="12"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <ComboBox x:Name="WaitTimeComboBox" 
                                                  HorizontalAlignment="Stretch"
                                                  SelectionChanged="WaitTimeComboBox_SelectionChanged"
                                                  ToolTipService.ToolTip="Tempo de espera entre tentativas (/W)"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Hash Validation Card -->
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel Spacing="12">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE72E;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="Validação de Integridade" 
                                                  FontWeight="SemiBold"
                                                  FontSize="14"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <CheckBox x:Name="EnableHashValidationCheckBox" 
                                              Content="Validar integridade com hash"
                                              Checked="EnableHashValidationCheckBox_Checked"
                                              Unchecked="EnableHashValidationCheckBox_Unchecked">
                                        <ToolTipService.ToolTip>
                                            <ToolTip>
                                                <StackPanel Spacing="4" MaxWidth="300">
                                                    <TextBlock Text="Validação de Hash" FontWeight="SemiBold"/>
                                                    <TextBlock Text="Após a cópia, calcula e compara o hash dos arquivos de origem e destino para garantir integridade dos dados." 
                                                              TextWrapping="Wrap"
                                                              FontSize="12"
                                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </CheckBox>

                                    <StackPanel Spacing="8" Margin="24,0,0,0" x:Name="HashAlgorithmPanel" Visibility="Collapsed">
                                        <TextBlock Text="Algoritmo de hash:" 
                                                  FontSize="12"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <ComboBox x:Name="HashAlgorithmComboBox" 
                                                  HorizontalAlignment="Stretch"
                                                  SelectionChanged="HashAlgorithmComboBox_SelectionChanged">
                                            <ToolTipService.ToolTip>
                                                <ToolTip>
                                                    <StackPanel Spacing="4" MaxWidth="400">
                                                        <TextBlock Text="Algoritmos de Hash Disponíveis" FontWeight="SemiBold"/>
                                                        <TextBlock Text="SHA-2 (Tradicionais):" FontWeight="SemiBold" FontSize="11" Margin="0,4,0,2"/>
                                                        <TextBlock Text="• MD5: Mais rápido, menos seguro (obsoleto)" TextWrapping="Wrap" FontSize="11"/>
                                                        <TextBlock Text="• SHA-1: Rápido, boa compatibilidade (obsoleto)" TextWrapping="Wrap" FontSize="11"/>
                                                        <TextBlock Text="• SHA-256: Recomendado - equilíbrio ideal" TextWrapping="Wrap" FontSize="11"/>
                                                        <TextBlock Text="• SHA-384: Seguro, bom desempenho" TextWrapping="Wrap" FontSize="11"/>
                                                        <TextBlock Text="• SHA-512: Mais seguro, mais lento" TextWrapping="Wrap" FontSize="11"/>
                                                        <TextBlock Text="SHA-3 (Modernos - NIST 2015):" FontWeight="SemiBold" FontSize="11" Margin="0,4,0,2"/>
                                                        <TextBlock Text="• SHA3-256: Padrão moderno, resistente a ataques" TextWrapping="Wrap" FontSize="11"/>
                                                        <TextBlock Text="• SHA3-384: Segurança avançada" TextWrapping="Wrap" FontSize="11"/>
                                                        <TextBlock Text="• SHA3-512: Máxima segurança, mais lento" TextWrapping="Wrap" FontSize="11"/>
                                                        <TextBlock Text="BLAKE3 (Ultra-moderno):" FontWeight="SemiBold" FontSize="11" Margin="0,4,0,2"/>
                                                        <TextBlock Text="• BLAKE3: Ultra-rápido, muito seguro, paralelizado" TextWrapping="Wrap" FontSize="11"/>
                                                        <TextBlock Text="  Ideal para grandes volumes de dados" TextWrapping="Wrap" FontSize="11" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                                    </StackPanel>
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                        </ComboBox>
                                        
                                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="8"
                                                Margin="0,4,0,0">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon Glyph="&#xE946;" FontSize="12" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                                <TextBlock Text="A validação ocorrerá após a conclusão da cópia"
                                                          FontSize="11"
                                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                          TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Expander>

            </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Hidden elements for code-behind compatibility -->
        <Grid Visibility="Collapsed">
            <StackPanel>
                <TextBox x:Name="SourcePathTextBox"/>
                <TextBox x:Name="DestinationPathTextBox"/>
                <TextBox x:Name="CommandPreviewTextBox"/>
                <NumberBox x:Name="ThreadCountNumberBox" Value="8"/>
                <NumberBox x:Name="RetryCountNumberBox" Value="3"/>
                <NumberBox x:Name="WaitTimeNumberBox" Value="5"/>
                <ScrollViewer x:Name="OutputScrollViewer">
                    <TextBlock x:Name="OutputTextBlock"/>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
